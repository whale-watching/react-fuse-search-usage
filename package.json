{
  "name": "react-fuzzy-highlighter",
  "version": "0.2.0",
  "license": "MIT",
  "description": "Lightweight fuzzy search highlighting component using fuse.js",
  "author": "Eric Liu (https://github.com/metonym)",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "develop": "tsc -w",
    "build": "rm -rf lib && tsc -p tsconfig.prod.json",
    "lint": "tslint --fix -p . -c tslint.json",
    "test": "jest",
    "test:tdd": "jest --watch",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "fuse.js": "^3.4.5",
    "set-value": "^3.0.1",
    "strind": "^0.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/enzyme": "^3.10.2",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/enzyme-to-json": "^1.5.3",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/set-value": "^2.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/react-fuzzy-highlighter.git"
  },
  "homepage": "https://github.com/metonym/react-fuzzy-highlighter",
  "keywords": [
    "react",
    "fuzzy",
    "fuse.js",
    "highlight"
  ],
  "files": [
    "lib/"
  ],
  "bugs": "https://github.com/metonym/react-fuzzy-highlighter/issues"
}
